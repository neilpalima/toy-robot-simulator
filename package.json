{
  "name": "toy-robot-simulator",
  "version": "1.0.0",
  "description": "A simple toy robot simulator",
  "author": "Neil Palima",
  "main": "./dist/index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "start:dev": "npx tsc-watch --onSuccess \"npm start\" ",
    "build": "npx tsc -p ./tsconfig.json",
    "lint": "npx tsc --noEmit && eslint \"{src,test}/*.{js,ts}\"",
    "lint:fix": "npm run lint -- --fix",
    "test": "NODE_ENV=test ./node_modules/.bin/mocha --exit -t 15000 -r ts-node/register test/*.ts"
  },
  "dependencies": {
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/eslint": "^6.1.3",
    "@types/mocha": "^5.2.5",
    "@types/node": "^12.11.7",
    "@types/sinon": "^7.0.4",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "chai": "^4.2.0",
    "eslint": "^6.6.0",
    "mocha": "^8.4.0",
    "sinon": "^7.2.3",
    "ts-node": "^7.0.1",
    "tsc-watch": "^1.1.34"
  },
  "engines": {
    "node": ">=12.0"
  }
}
